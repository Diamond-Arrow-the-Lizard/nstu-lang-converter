<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:GUI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GUI.Views.PseudocodeEditorView"
             x:DataType="vm:PseudocodeEditorViewModel">
    <Grid>
        <TextBlock x:Name="HighlightedTextBlock"
                   TextWrapping="Wrap"
                   VerticalAlignment="Stretch"
                   HorizontalAlignment="Stretch"
                   Background="White"
                   Padding="5"
                   FontFamily="Consolas"
                   FontSize="14"/>

        <TextBox x:Name="EditorTextBox" Text="{Binding PseudocodeText}"
                 AcceptsReturn="True"
                 VerticalAlignment="Stretch"
                 HorizontalAlignment="Stretch"
                 Background="Transparent"
                 CaretBrush="Black"
                 Foreground="Transparent" Padding="5"
                 FontFamily="Consolas"
                 FontSize="14"
                 TextWrapping="Wrap"
                 GotFocus="EditorTextBox_GotFocus"     LostFocus="EditorTextBox_LostFocus"/> </Grid>
</UserControl>